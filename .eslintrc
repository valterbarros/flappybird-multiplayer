{
  "extends": ["eslint-config-airbnb-base", "prettier"],

  "plugins": ["prettier"],

  "env": {
    "browser": true
  },
  
  "globals": {
    "$": true,
    "replayclickable": true,
    "highscore": true,
    "score": true
  },

  "rules": {
    "semi": 0,
    "import/no-unresolved": 0,
    "new-cap": 0
  },

  "parser": "babel-eslint",

  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "modules": ["frontend", "node_modules"]
          }
        }
      }
    }
  }
}
